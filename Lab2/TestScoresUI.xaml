<Window x:Class="Lab2.TestScoresUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="TestScoresUI" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Enter Test Scores:" FontSize="18" Margin="0 0 0 10"/>
            <TextBox x:Name="txtScore1" Width="100" Margin="0 0 0 5"/>
            <TextBox x:Name="txtScore2" Width="100" Margin="0 0 0 5"/>
            <TextBox x:Name="txtScore3" Width="100" Margin="0 0 0 5"/>
            <Button Content="Calculate" Width="80" Click="Calculate_Click"/>
            <TextBlock x:Name="txtResult" FontSize="16" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
